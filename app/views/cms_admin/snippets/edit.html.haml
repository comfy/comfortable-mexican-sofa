.page-header
  - proper_pluralization = ComfortableMexicanSofa::Translations.pluralize( 'cms_admin.snippets.edit.revision', @snippet.revisions.count )
  = link_to proper_pluralization, cms_admin_site_snippet_revisions_path(@site, @snippet), :class => 'btn pull-right'
  %h2= t('.title')

- content_for :right_column do
  = render :partial => 'cms_admin/sites/mirrors', :object => @snippet

= comfy_form_for @snippet, :as => :snippet, :url => {:action => :update} do |form|
  = render form
