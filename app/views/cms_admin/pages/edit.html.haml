.page-header
  - proper_pluralization = ComfortableMexicanSofa::Translations.pluralize( 'cms_admin.pages.edit.revision', @page.revisions.count )
  = link_to proper_pluralization, cms_admin_site_page_revisions_path(@site, @page), :class => 'btn pull-right'
  %h2= t('.title')

- content_for :right_column do
  = render :partial => 'cms_admin/sites/mirrors', :object => @page

= comfy_form_for @page, :as => :page, :url => {:action => :update}, :html => {:multipart => true} do |form|
  = render form
