.page-header
  - proper_pluralization = ComfortableMexicanSofa::Translations.pluralize( 'cms_admin.layouts.edit.revision', @layout.revisions.count )
  = link_to proper_pluralization, cms_admin_site_layout_revisions_path(@site, @layout), :class => 'btn pull-right'
  %h2= t('.title')

- content_for :right_column do
  = render :partial => 'cms_admin/sites/mirrors', :object => @layout

= comfy_form_for @layout, :as => :layout, :url => {:action => :update} do |form|
  = render form
