%ul.navigation
  %li= active_link_to t('cms_admin.base.sites'), admin_cms_sites_path, :active => ['cms_admin/sites']
  
  - if @site && !@site.new_record?
    %li= active_link_to t('cms_admin.base.layouts'), admin_cms_site_layouts_path(@site)
    %li= active_link_to t('cms_admin.base.pages'), admin_cms_site_pages_path(@site)
    %li= active_link_to t('cms_admin.base.snippets'), admin_cms_site_snippets_path(@site)
    %li= active_link_to t('cms_admin.base.files'), admin_cms_site_files_path(@site)

  %li= active_link_to t('cms_admin.base.users'), admin_cms_users_path
    
  = cms_hook :navigation
